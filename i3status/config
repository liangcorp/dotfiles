general {
        # output_format = "dzen2"
		# output_format = "xmobar"
        colors = true
		color_good = "#00FF00"
        interval = 5
}

# order += "ipv6"
order += "cpu_temperature 0"
order += "memory"
# order += "load"
order += "disk /"
# order += "run_watch DHCP"
# order += "run_watch VPNC"
order += "path_exists VPN"
order += "wireless wlp9s0"
order += "ethernet enp0s31f6"
order += "volume_master"
order += "battery 0"
# order += "tztime local"
order += "tztime dublin"

wireless wlp9s0 {
        # format_up = "WiFi: (%quality at %essid, %bitrate) %ip"
        format_up = "WiFi: (%quality at %essid) %ip"
        format_down = "WiFi: down"
}

ethernet enp0s31f6 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "?"
        status_full = "â˜»"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
        hide_if_equals_localtime = true
}

tztime dublin {
        format = "%a %d-%m-%Y %H:%M %Z"
        timezone = "Europe/Dublin"
}

load {
        format = "[ load: %1min, %5min, %15min ]"
}

cpu_temperature 0 {
        format = "CPU: %degrees Â°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon7/temp1_input"
}

memory {
        format = "MEM %used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "DISK %percentage_used used"
}

read_file uptime {
        path = "/proc/uptime"
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
